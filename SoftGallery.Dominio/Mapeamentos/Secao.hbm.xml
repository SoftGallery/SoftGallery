<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="SoftGallery.Dominio.Entidades.Secao" table="Secoes">
		<id name="Id" column="Id" type="int">
			<generator class="identity" />
		</id>

		<property name="Nome" column="Nome" type="string" not-null="true" />
		<property name="DataExpiracao" column="DataExpiracao" type="datetime" />
		<property name="Ativo" column="Ativo" type="bool" />
		<property name="Ordem" column="Ordem" type="int" />
		<property name="Banner" column="Banner" type="string" />

		<list name="SubSecao" cascade="all" inverse="true">
			<key column="SecaoPaiId" />
			<one-to-many class="SoftGallery.Dominio.Entidades.Secao" />
		</list>

		<bag name="ProdutosIds" table="SecaoProdutos" cascade="all">
			<key column="SecaoId" />
			<element column="ProdutoId" type="int" />
		</bag>
	</class>
</hibernate-mapping>